{
  "diagnostic.virtualText": true,
  "diagnostic.errorSign": "❌",
  "diagnostic.warningSign": "⚠️",
  "diagnostic.hintSign": "○",
  "diagnostic.infoSign": "ℹ️",
	"codeLens.enable": true,
	"java.referencesCodeLens.enabled": true,
  "languageserver": {
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": [
        "--lsp"
      ],
      "rootPatterns": [
        ".stack.yaml",
        ".hie-bios",
        "BUILD.bazel",
        "cabal.config",
        "package.yaml"
      ],
      "filetypes": [
        "hs",
        "lhs",
        "haskell"
      ]
    }
  }
}
